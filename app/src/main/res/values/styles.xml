<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Adeon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.Adeon" parent="Base.Theme.Adeon"/>

    <style name="Theme.Adeon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Adeon.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Theme.Adeon.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.Adeon.Fab.Phone" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/Button</item>
        <item name="backgroundTint">@color/ButtonInverted</item>
    </style>

    <style name="Theme.Adeon.Fab.SMS" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/ButtonContent</item>
        <item name="backgroundTint">@color/Button</item>
    </style>

    <style name="Theme.Adeon.Fab.SMS.Text" parent="Widget.MaterialComponents.Button">
        <item name="tint">@color/ButtonContent</item>
        <item name="backgroundTint">@color/Button</item>
    </style>

    <style name="TextAppearance.Adeon.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Adeon.ListItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ListItem</item>
    </style>

    <style name="Theme.Adeon.LightDarkMode">
        <item name="android:background">@color/Background</item>
        <item name="android:textColor">@color/Text</item>
    </style>


</resources>
