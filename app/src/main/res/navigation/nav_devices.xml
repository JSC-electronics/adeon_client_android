<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/devices_fragment">

    <fragment
        android:id="@+id/devices_fragment"
        android:name="cz.jsc.electronics.arduinosms.DevicesFragment"
        android:label="@string/my_devices_title"
        tools:layout="@layout/fragment_devices">

        <action
            android:id="@+id/action_devices_fragment_to_add_device_fragment"
            app:destination="@id/add_device_fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
            android:id="@+id/about_fragment"
            android:name="cz.jsc.electronics.arduinosms.AboutFragment"
            android:label="@string/about_title"
            tools:layout="@layout/fragment_about">
    </fragment>

    <fragment android:id="@+id/add_device_fragment"
              android:name="cz.jsc.electronics.arduinosms.AddDeviceFragment"
              android:label="@string/add_device_title"
              tools:layout="@layout/fragment_add_device"/>

</navigation>