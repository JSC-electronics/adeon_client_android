<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.Adeon" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#1871a7</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Adeon" parent="Base.Theme.Adeon"/>

    <style name="Theme.Adeon.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Adeon.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Theme.Adeon.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark"/>

    <style name="TextAppearance.Adeon.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Theme.Adeon.Fab.Phone" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/ButtonDM</item>
        <item name="backgroundTint">@color/ButtonInvertedDM</item>
    </style>

    <style name="Theme.Adeon.Fab.SMS" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/ButtonContentInvertedDM</item>
        <item name="backgroundTint">@color/ButtonDM</item>
    </style>

    <style name="Theme.Adeon.Fab.SMS.Text" parent="Widget.MaterialComponents.Button">
        <item name="tint">@color/ButtonContentInvertedDM</item>
        <item name="backgroundTint">@color/ButtonDM</item>
    </style>

    <style name="Theme.Adeon.ListItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/ListItemDM</item>
        <item name="background">@color/BackgroundDM</item>
    </style>

    <style name="Theme.Adeon.LightDarkMode">
        <item name="android:background">@color/BackgroundDM</item>
        <item name="android:textColor">@color/TextDM</item>
    </style>

</resources>
